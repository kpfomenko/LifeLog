<?xml version="1.0" encoding="utf-8"?>
<edu.ucsb.cs.cs185.kfomenko.lifelog.HomeCard xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_card"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="0dp"
    android:layout_marginBottom="0dp"
    android:layout_marginRight="0dp"
    android:padding="0dp"
    android:clickable="true"
    android:onClick="home_card_click">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/home_card_layout"
        android:orientation="horizontal"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:background="@drawable/card_border">
        <LinearLayout
            android:id="@+id/home_card_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="0dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:gravity="center">
            <TextView
                android:id="@+id/home_card_category"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"/>
            <TextView
                android:id="@+id/home_card_start_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray"></View>
        <TextView
            android:id="@+id/home_card_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center"/>
    </LinearLayout>

</edu.ucsb.cs.cs185.kfomenko.lifelog.HomeCard>