<?xml version="1.0" encoding="utf-8"?>
<edu.ucsb.cs.cs185.kfomenko.lifelog.HomeCard xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_card"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:padding="0dp"
    android:clickable="true"
    android:onClick="home_card_click">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/home_card_layout"
        android:orientation="horizontal"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:background="@drawable/card_border">
        <RelativeLayout
            android:id="@+id/home_card_header"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:padding="0dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp">
            <TextView
                android:id="@+id/home_card_start_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:layout_gravity="start|top"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray"></View>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:layout_margin="0dp"
            android:background="@color/transparentWhite"
            android:padding="0dp">
            <TextView
                android:id="@+id/home_card_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/home_card_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:textColor="@color/gray"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>

</edu.ucsb.cs.cs185.kfomenko.lifelog.HomeCard>