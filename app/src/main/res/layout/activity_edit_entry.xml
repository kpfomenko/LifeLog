<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/edit_entry_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/edit_entry_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/edit_entry_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:padding="0dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <View
            android:id="@+id/edit_entry_divider"
            android:layout_below="@id/edit_entry_header"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"></View>

        <LinearLayout
            android:id="@+id/edit_entry_timespan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/edit_entry_divider"
            android:gravity="center"
            android:padding="0dp"
            android:layout_margin="20dp">
            <TextView
                android:id="@+id/edit_entry_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="startTime"
                android:padding="0dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/edit_entry_through"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:padding="0dp"
                android:text=" - "/>
            <TextView
                android:id="@+id/edit_entry_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="0dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!--<View-->
            <!--android:id="@+id/edit_entry_divider2"-->
            <!--android:layout_below="@id/edit_entry_timespan"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/gray"></View>-->

        <LinearLayout
            android:id="@+id/edit_entry_annotation_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="30dp"
            android:layout_below="@id/edit_entry_timespan"
            android:gravity="center">
            <TextView
                android:id="@+id/edit_entry_annotation_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/gray"
                android:text="Description"/>
            <View
                android:layout_margin="0dp"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="@color/gray"></View>
            <TextView
                android:id="@+id/edit_entry_anno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="20dp"/>
        </LinearLayout>

        <View
            android:id="@+id/edit_entry_divider2"
            android:layout_below="@id/edit_entry_annotation_row"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_below="@id/edit_entry_annotation_row">
            <Button
                android:id="@+id/edit_entry_save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_weight="1"
                android:onClick="edit_entry_edit"/>
            <Button
                android:id="@+id/edit_entry_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_weight="1"
                android:onClick="edit_entry_delete"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>